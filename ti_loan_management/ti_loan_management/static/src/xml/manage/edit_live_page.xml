<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ti_loan_management.liveedit">
        <form class="aboutus text-start"  >
            <div class="row">
                
                <div class="col">
                    <label for="inputEmail4" class="input-label required_field">Address Line 1</label>
                    <input type="text" name="address_line1" t-model="state.address_line1"  t-att-class="form-control" placeholder="Address Line 1" />
                    
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="inputEmail4" class="input-label required_field mt-4">Address Line 2</label>
                    <input type="text" name="address_line2" t-model="state.address_line2" t-att-class="form-control " placeholder="Address Line 2"/>
                  
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="inputEmail4" class="input-label required_field mt-4">Country</label>
                    <select id="countrycode" name="country" t-model="state.country" class="form-control select-option">
                        <option value="">Select a country</option>
                       
                        <option t-foreach="state.countries" t-as="country" t-key="country.code" t-att-value="country.code" >
                            <t t-esc="country.name"/>
                        </option>
                    </select>
                    
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="input-label required_field mt-4">EirCode</label>
                    <input type="text" name="eircode" t-model="state.eircode" t-att-class="form-control"  placeholder="EirCode"/>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="inputEmail4" class="input-label required_field mt-4">Residential Status</label>
                    <input type="text" name="residential_status" t-model="state.residential_status"  t-att-class="form-control" placeholder="Residential Status"/>
                    
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="input-label required_field mt-4">Years living at current address</label>
                    <input type="text" name="years_living_current_address" t-model="state.years_living_current_address" t-att-class="form-control"  placeholder="Years living at current address"/>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="inputEmail4" class="input-label required_field mt-4">Years resident in Ireland</label>
                    <input type="text" name="years_resident _in_ireland" t-model="state.years_resident"  t-att-class="form-control" placeholder="Years resident in Ireland"/>
                    
                </div>
                <div class="col-md-6"></div>
               
                <div class="col">
                    <div class="form-check text-end">
                        <button type="button" class="btn btn-primary create_app_btn w-50 mt-3 btn-mortgage ms-3" t-on-click="submitlive">
                            Continue
                        </button>
                        
                    </div>
                </div>


            </div>
        </form>

    </t>
</templates>
